@inherits LayoutComponentBase

@code {
	private bool darkMode;

	private void ToggleDarkMark() => darkMode = !darkMode;
}

<MudThemeProvider IsDarkMode=@darkMode />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation=4>
		<MudText Typo=@Typo.h6>BlazorStack</MudText>
		<MudSpacer />
		<MudIconButton
			Icon=@Icons.Custom.Brands.GitHub
			Color=Color.Inherit
			Link=https://github.com/ChristopherHaws/BlazorStack
			Target=_blank
		/>
		<MudIconButton
			Icon=@(darkMode ? Icons.Filled.DarkMode : Icons.Filled.LightMode)
			Color=Color.Inherit
			OnClick=@ToggleDarkMark
		/>
	</MudAppBar>
	<MudMainContent>
		<MudContainer MaxWidth=@MaxWidth.Large Class="my-16">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>
